datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Subscriber {
  id           String   @id @default(cuid())
  phone        String
  telegramNick String
  discordNick  String
  bitgetUid    String
  email        String   @unique
  supportCode  String   @unique     // <â€” codice di conferma per il supporto
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}


